{% extends 'base.html.twig' %}

    
{% block title %}
    Filmes
{% endblock %}
{% block stylesheets %}
    <style>
        #btn-filtro{
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    
    <div class="row">

		<section class="content">
                        <a href="{{path('app_filmes_cadastro')}}" class="btn btn-primary pull-right">
                            <span class="glyphicon glyphicon-plus"></span>
                            <span class="glyphicon glyphicon-film"></span>
                            Cadastrar Novo Filme
                        </a>
			<h1>Lista de Filmes</h1>
			<div class="col-md-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="pull-right" id="btn-filtro">
							<div class="btn-group">
								<button type="button" class="btn btn-success btn-filter" data-target="pagado">Disponíveis</button>
								<button type="button" class="btn btn-warning btn-filter" data-target="pendiente">Locados</button>
								<button type="button" class="btn btn-primary btn-filter" data-target="cancelado">Lançamentos</button>
								<button type="button" class="btn btn-danger btn-filter" data-target="cancelado">Reservados</button>
								<button type="button" class="btn btn-default btn-filter" data-target="all">Todos</button>
							</div>
						</div>
						<div class="table-container">
							<table class="table table-filter">
								<tbody>
                                                                    {% for filme in filmes %}
									<tr data-status="pagado">
										<td>
											<div class="ckbox">
												<input type="checkbox" id="checkbox1">
												<label for="checkbox1"></label>
											</div>
										</td>
										<td>
											<a href="javascript:;" class="star">
												<i class="glyphicon glyphicon-star"></i>
											</a>
										</td>
										<td>
											<div class="media">
												<a href="#" class="pull-left">
													<img src="https://s3.amazonaws.com/uifaces/faces/twitter/fffabs/128.jpg" class="media-photo">
												</a>
												<div class="media-body">
													<span class="media-meta pull-right">Data</span>
													<h4 class="title">
                                                                                                            {{ filme.nome }}
														<span class="pull-right pagado">(Pagado)</span>
													</h4>
													<p class="summary">{{filme.sinopse}}</p>
												</div>
											</div>
										</td>
									</tr>
                                                                        {% endfor %}
									
								</tbody>
							</table>
						</div>
					</div>
				</div>
				
			</div>
		</section>
		
	</div>
{% endblock %}